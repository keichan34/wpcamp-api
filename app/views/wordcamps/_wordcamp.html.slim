.wordcamp-tile.col-lg-3.col-md-6.col-xs-6 data={ id: wordcamp.id }
  = link_to wordcamp.url, class: 'wordcamp-tile-inner' do
    h5.title
      = wordcamp.title
    .period
      = wordcamp.start
      - if wordcamp.end
        | ~ #{ wordcamp.end }
    = image_tag wordcamp.thumbnail.url(:thumb), class: 'img-responsive thumbnail-image'
